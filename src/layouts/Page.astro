---
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
		<a href="https://github.com/TheAnnoying/grid-calculator-v2" target="_blank" id="github-link">Source code on GitHub</a>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: dark;
	}
	
	body {
		margin: 0;
		display: flex;
		flex-direction: column;
		height: calc(100vh - 31px);
		justify-content: center;
		align-items: center;
		background-color: rgb(23, 25, 30);
		font-family: Arial, Helvetica, sans-serif;
	}

	button {
		font-size: 1.5rem;
		padding: 5px 25px;
		box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.3);
		border-radius: 0;
		border: 0;
		margin: 5px;
	}

	button:focus-visible {
		outline: 0;
	}

	button:active {
		filter: brightness(.7);
		transform: translateY(3px);
	}

	input {
		font-size: 1.5rem;
		padding: 5px 25px;
		border-radius: 0;
		border: 0;
		margin: 5px;
	}

	input:focus-visible {
		outline: 5px solid rgba(255, 255, 255, 0.5);
	}

	h1, p, a {
		margin: 0;
		color: white;
	}

	#github-link {
		position: absolute;
		bottom: 15px;
		color: #858B89;
		font-size: 14px;
		text-decoration-line: underline;
		text-underline-offset: 4px;
	}

	#github-link:hover {
		color: white;
	}
</style>