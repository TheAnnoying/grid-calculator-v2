---
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
		<a href="https://github.com/TheAnnoying/grid-calculator-v2" target="_blank" id="github-link">Source code on GitHub</a>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: dark;
	}

	html {
		overflow: hidden; /* remember to remove this after you make this site responsive */
	}

	body {
		overflow: hidden; /* remember to remove this after you make this site responsive */
		margin: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		justify-content: center;
		align-items: center;
		background-image: url("/background.png");
		background-size: cover;
		background-position: 50% 50%;
		font-family: Arial, Helvetica, sans-serif;
	}

	button {
		font-size: 1.5rem;
		padding: 5px 25px;
		box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.3);
		border-radius: 0;
		border: 0;
		margin: 5px;
	}

	button:focus-visible {
		outline: 0;
	}

	button:active {
		filter: brightness(.7);
		transform: translateY(3px);
	}

	.dungeon-button {
		background-color: #3F8D4F;
		color: #FFF;
		position: relative;
		text-shadow: 0 3.5px #285130;
		font-family: "minecraft/five-bold";
		text-decoration: none;
		padding: 10px 60px;
		filter: drop-shadow(7px 7px #0004);
	}

	.dungeon-button::before {
		content: "";
		position: absolute;
		inset: 0 -5px 0 -5px;
		background: linear-gradient(90deg, #357B41 50%, #387A44 50%);
		z-index: -1;
	}

	.dungeon-button::after {
		content: "";
		position: absolute;
		inset: -5px 0 -5px 0;
		background: linear-gradient(180deg, #61CE73 50%, #24582F 50%);
		z-index: -1;
	}

	.dungeon-button-gray {
		filter: grayscale(1)
	}

	h1, p, a {
		margin: 0;
		color: white;
	}

	dialog {
		padding: 50px;
		border-image-slice: 8 8 8 8 fill;
		border-image-width: 40px;
		border-image-repeat: stretch stretch;
		background-color: transparent;
		border-image-source: url("data:image/png;base64,");
		image-rendering: pixelated;
	}

	dialog h1 {
		font-family: "minecraft/five-bold";
	}

	#github-link {
		position: fixed;
		bottom: 0;
		padding: 15px 0;
		color: #858B89;
		font-size: 14px;
		text-decoration-line: underline;
		text-underline-offset: 4px;
		text-align: center;
	}

	#github-link:hover {
		color: white;
	}
</style>