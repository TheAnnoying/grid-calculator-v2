---
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
		<a href="https://github.com/TheAnnoying/grid-calculator-v2" target="_blank" id="github-link">Source code on GitHub</a>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: dark;
	}

	body {
		margin: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		justify-content: center;
		align-items: center;
		background-image: url("/background.png");
		background-size: cover;
		background-position: 50% 50%;
		font-family: Arial, Helvetica, sans-serif;
	}
	
	.button,
	button {
		user-select: none;
		border-image-source: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAADCAYAAABWKLW/AAAACXBIWXMAAAsTAAALEwEAmpwYAAAAMElEQVQImWP8//8/Q9L5kv8MDAyMjKbVjv+5hPgYfr79ysDEwMDA+PT0AwYGBgZGADO+DS6ouzDJAAAAAElFTkSuQmCC");
		border-image-repeat: stretch stretch;
		border-image-slice: 1 1 1 1 fill;
		border-image-width: 5px 5px 5px 5px;
		background-color: transparent;
		color: #FFF;
		text-shadow: 0 3px #285130;
		font-family: "minecraft/five-bold";
		text-decoration: none;
		filter: drop-shadow(7px 7px #0004);
		font-size: 1.5rem;
		padding: 5px 50px;
		box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.3);
		border-radius: 0;
		margin: 5px;
	}

	.button-selected,
	button:focus-visible {
		border-image-source: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAADCAYAAABWKLW/AAAACXBIWXMAAAsTAAALEwEAmpwYAAAAIklEQVQImU3JMQEAIBAAId5kRjCZlc9VVqaCMAvte6D55wHuGwsbp2XuGAAAAABJRU5ErkJggg==");
		outline: 0;
	}

	button:active {
		filter: brightness(.7);
		transform: translateY(3px);
	}

	.button-gray {
		filter: grayscale(1) drop-shadow(7px 7px #0004);
	}

	.button-gray:active {
		filter: grayscale(1) drop-shadow(7px 7px #0004) brightness(.7);
	}

	h1, p, a {
		margin: 0;
		color: white;
	}

	dialog {
		padding: 50px;
		border-image-slice: 8 8 8 8 fill;
		border-image-width: 40px;
		border-image-repeat: stretch stretch;
		background-color: transparent;
		border-image-source: url("data:image/png;base64,");
		image-rendering: pixelated;
	}

	dialog h1 {
		font-family: "minecraft/five-bold";
	}

	#github-link {
		position: fixed;
		bottom: 0;
		padding: 15px 0;
		color: #858B89;
		font-size: 14px;
		text-decoration-line: underline;
		text-underline-offset: 4px;
		text-align: center;
	}

	#github-link:hover {
		color: white;
	}

	.disabled {
        opacity: 20%;
        pointer-events: none;
    }
</style>